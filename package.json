{
  "name": "unsea",
  "version": "2.0.0",
  "description": "Platform-agnostic cryptographic utility toolkit for ephemeral identity, secure messaging, and portable key management â€” built on WebCrypto + noble-curves.",
  "main": "dist/unsea.mjs",
  "module": "dist/unsea.mjs",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/unsea.mjs"
    }
  },
  "files": [
    "dist/",
    "src/",
    "test/test.js",
    "example/example.js",
    "README.md",
    "SECURITY.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run build && node test/test.js",
    "example": "npm run build && node example/example.js",
    "test:verbose": "npm run build && node test/test.js --verbose",
    "test:dev": "npm run dev",
    "prepublishOnly": "npm run build && npm test",
    "security:audit": "npm audit --audit-level=high",
    "security:fix": "npm audit fix",
    "codeql:setup": "./scripts/setup-codeql.sh",
    "codeql:quick": "./scripts/run-codeql-simple.sh",
    "codeql:full": "./scripts/run-codeql-local.sh",
    "security:full": "npm run security:audit && npm run codeql:full",
    "ci:setup": "./.github/scripts/setup-dev.sh",
    "ci:test": "npm run security:audit && npm run build && npm test",
    "publish:check": "npm run ci:test && npm pack --dry-run",
    "publish:manual": "npm run publish:check && echo 'Ready to publish! Run: npm publish'"
  },
  "keywords": [
    "crypto",
    "cryptography",
    "webcrypto",
    "p256",
    "ecdsa",
    "ecdh",
    "aes-gcm",
    "encryption",
    "signing",
    "verification",
    "jwk",
    "pem",
    "pkcs8",
    "pbkdf2",
    "indexeddb",
    "browser",
    "nodejs",
    "ephemeral",
    "identity",
    "messaging",
    "key-management",
    "noble-curves",
    "proof-of-work",
    "rate-limiting",
    "anti-spam",
    "computational-proof",
    "pow",
    "sha256",
    "security",
    "input-validation",
    "constant-time",
    "timing-attack-resistant"
  ],
  "author": "Dan Raeder",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/draeder/unsea.git"
  },
  "bugs": {
    "url": "https://github.com/draeder/unsea/issues"
  },
  "homepage": "https://github.com/draeder/unsea#readme",
  "dependencies": {
    "@noble/curves": "^1.9.7",
    "idb-keyval": "^6.2.2"
  },
  "devDependencies": {
    "terser": "^5.0.0",
    "vite": "^6.3.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/draeder"
  }
}
